{
	"root": true,
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module"
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"amd": true,
		"jquery": true
	},
	"extends": ["eslint:recommended"],
	"plugins": ["html"],
	"settings": {
		"import/ignore": ["node_modules", "\\.(coffee|scss|css|less|hbs|svg|json)$"]
	},
	"rules": {
		"arrow-parens": 0,
		"generator-star-spacing": 0,
		"no-console": "warn",
		"no-unused-vars": "warn"
	}
}
