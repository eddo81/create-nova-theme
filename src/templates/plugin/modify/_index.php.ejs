// Define plugin wide control variables.
define( 'MIN_PHP_VERSION', '<%= minPhpVersion %>' );
define( 'MIN_WP_VERSION', '<%= minWpVersion %>' );

// Define plugin wide paths.
define( 'PLUGIN_ROOT_URL', get_template_directory_uri() );
define( 'PLUGIN_ROOT_URI', get_template_directory() );

if ( function_exists( 'plugin_error' ) === false ) {
	/**
	 * Helper function for prettying up errors.
	 *
	 * @param string $message The error message body.
	 * @param string $heading The error message heading.
	 * @param string $title The page title.
	 * @param array  $options Optional arguments array.
	 */
	function plugin_error( $message, $heading = '', $title = '', $options = array() ) {
		$title   = $title ?: __( 'Plugin error', '<%= textDomain %>' );
		$heading = ( $heading ) ? $heading : $title;
		$message = "<h1>{$heading}</h1><br><br>{$message}";
		wp_die( $message, $title, $options );
	};
}

// Setup autoloader.
require PLUGIN_ROOT_URI . '/inc/plugin-autoloader.php';
